.modal(ng-style="{display: visible ? 'block' : 'none' }" ng-class="{in: visible}" tabindex='-1' role='dialog' aria-hidden='true')
  .modal-dialog
    .modal-content(ng-transclude='')
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') &times;
