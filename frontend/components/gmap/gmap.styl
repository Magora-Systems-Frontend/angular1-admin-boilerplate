class = gmap

.{class}{
	&__map{
		height: 100%;
		width: 100%;

		ui-gmap-google-map{
			width: 100%;
			height: 100%;
			display block

			.angular-google-map{
				width: 100%;
				height 100%;

				.angular-google-map-container{
					width: 100%;
					height: 100%;

					img {
						max-width: none;
						max-height: initial; //without it google map not update when drag
					}
				}
			}
		}
	}
}
