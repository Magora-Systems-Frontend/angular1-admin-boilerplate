class = datetime-dropdown
{class}{
  width: 100%;
  height: 100%;
}
.{class}{
  position relative;
  width: 100%;
  height: 100%;
  &:focus{
    outline: none;
  }

  &__text{
    cursor: pointer;
    height: 30px;
    line-height: 30px;
    border: 1px solid #d2d6de;
    background-color: #fff;
    padding: 0 10px;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    font-size: 12px;
    color: #555;
    margin 0
  }

  &__widget{
    top: 100%;
    left: -70%;
    position: absolute;
    z-index: 10;

    transition opacity ease 0.2s;
    visibility: hidden;
    opacity 0;

    &--visible{
      visibility visible;
      opacity 1;
    }
  }
}